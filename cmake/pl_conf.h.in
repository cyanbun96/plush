#ifndef _PL_CONF_H_
#define _PL_CONF_H_

#ifdef __cplusplus
extern "C" {
#endif

/* Library version */
#define PL_VERSION "@CMAKE_PROJECT_VERSION@"

/* Whether or not Plush was compiled as fully freestanding (no stdlib) */
#define PL_FREESTANDING (@PLUSH_FREESTANDING@)

/* Maximum lights per scene -- if you exceed this, they will be ignored */
#define PL_MAX_LIGHTS (@PLUSH_MAX_LIGHTS@)

/* Maximum number of triangles per scene -- if you exceed this, entire 
objects will be ignored. You can increase this if you need it. It takes
approximately 8*PL_MAX_TRIANGLES bytes of memory. i.e. the default of
16384 consumes 128kbytes of memory. not really a big deal, 
*/

#define PL_MAX_TRIANGLES (@PLUSH_MAX_TRIANGLES@)

#ifdef __cplusplus
}
#endif

#endif /* !_PL_CONF_H_ */
